{{/if}}
<form method="post" action="/adduser" autocomplete="true" class="form-center">
    <div class="form-group">
        <lable for="name">NAME</lable>
        <input type="text " name="name">
    </div>

    <div class="form-group">
        <lable for="age">AGE</lable>
        <input type="number" name="age">
    </div>

